{
    "workflowApiVersion": "1.0",
    "lang": {
        "en-US": {
            "name": "VCB Telegram",
            "description": "Salesforce Marketing Cloud - Journey Builder Telegram custom activity."
        },
        "vi-VN": {
            "name": "Telegram VCB",
            "description": "Salesforce Marketing Cloud - Journey Builder ứng dụng tương tác với Telegram."
        }
    },
    "metaData": {
        "icon": "images/telegram-icon.png",
        "iconSmall": "images/telegram-icon-small.png",
        "category": "message",
        "isConfigured": true
    },
    "type": "REST",
    "arguments": {
        "execute": {
            "inArguments": [{
                    "telegramMessage": "{{Interaction.telegramMessage}}"
                },
                {
                    "imageURL": "{{Interaction.imageURL}}"
                },
                {
                    "emailAddress": "{{InteractionDefaults.Email}}"
                },
                {
                    "telegramId": "{{Contact.Default.TelegramId}}"
                }
            ],
            "outArguments": [

            ],
            "url": "https://salesforce-marketing-cloud-journey.onrender.com/api/execute",
            "verb": "POST",
            "useJwt": false,
            "timeout": 10000
        }
    },
    "configurationArguments": {
        "save": {
            "url": "https://salesforce-marketing-cloud-journey.onrender.com/api/save",
            "verb": "POST",
            "useJwt": false
        },
        "publish": {
            "url": "https://salesforce-marketing-cloud-journey.onrender.com/api/publish",
            "verb": "POST",
            "useJwt": false
        },
        "stop": {
            "url": "https://salesforce-marketing-cloud-journey.onrender.com/api/stop",
            "verb": "POST",
            "useJwt": false
        },
        "validate": {
            "url": "https://salesforce-marketing-cloud-journey.onrender.com/api/validate",
            "verb": "POST",
            "useJwt": false
        }
    },
    "wizardSteps": [
        { "label": "Bước 1", "key": "step1" },
        { "label": "Bước 2", "key": "step2" },
        { "label": "Bước 3", "key": "step3", "active": false }
    ],
    "userInterfaces": {
        "configModal": {
            "height": 380,
            "width": 1028,
            "fullscreen": false
        },
        "configInspector": {
            "size": "medium"
        }
    },
    "schema": {
        "arguments": {
            "execute": {
                "inArguments": [{
                    "contactTelegramId": {
                        "dataType": "Text",
                        "isNullable": false,
                        "direction": "in"
                    },
                    "fullName": {
                        "dataType": "Text",
                        "isNullable": false,
                        "direction": "in"
                    },
                    "code": {
                        "dataType": "Phone",
                        "isNullable": true,
                        "direction": "in"
                    },
                    "emailAddress": {
                        "dataType": "Email",
                        "isNullable": true,
                        "direction": "in"
                    },
                    "registerDate": {
                        "dataType": "Date",
                        "isNullable": true,
                        "direction": "in"
                    }
                }]
            }
        }
    }
}